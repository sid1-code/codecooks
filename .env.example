# Database Configuration
DATABASE_URL=sqlite:///./services.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# Logging Configuration
SQL_ECHO=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=*

# Security (for production)
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Configuration
# Provider currently supported: openai
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4o-mini
AI_DEFAULT_LANGUAGE=English

# Azure OpenAI (set AI_PROVIDER=azure)
# Get these from your Azure OpenAI resource (Keys & Endpoint) and your deployment name
AZURE_OPENAI_ENDPOINT=https://YOUR-RESOURCE-NAME.openai.azure.com
OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2024-05-01-preview
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# OpenRouter (set AI_PROVIDER=openrouter)
# Get API key from https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=http://localhost
OPENROUTER_APP_NAME=BMS Health Assistant
# Choose a model available on OpenRouter, e.g.:
#   AI_MODEL=openrouter/openai/gpt-4o
#   AI_MODEL=openrouter/openai/gpt-4o-mini
